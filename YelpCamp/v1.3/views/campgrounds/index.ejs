<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row" style="display:flex; flex-wrap: wrap;">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <figure class="figure">
                    <img src="<%= camp.image %>" class="img-thumbnail">
                    <figcaption class="figure-caption text-center"><%= camp.name %></figcaption>
                    <p class="text-center">
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </figure>
                
            </div>
        <% }) %>
    </div>
</div>
    
<% include ../partials/footer %>