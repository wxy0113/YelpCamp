<% include ./partials/header %>

<div class="ui main container segment">
    <div class="ui huge header">Edit <%= foundBlog.title %> Blog</div>
    <form class="ui form" action="/blogs/<%= foundBlog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" val="<%= foundBlog.title %>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" val="<%= foundBlog.image %>" required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required><%= foundBlog.body %></textarea>
        </div>
        <input class="ui inverted big green button" type="submit">
    </form>
</div>

<% include ./partials/footer %>